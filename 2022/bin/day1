#!/usr/bin/env ruby
require_relative '../lib/elf_calorie_file'

path = File.expand_path("../data/elf_calorie_file.txt", __dir__)
elf_calorie_file = ElfCalorieFile.new(path)

puts "The elf with the highest calories has #{elf_calorie_file.max_calories(1)} total calories"
puts "The 3 elves with the highest calories have #{elf_calorie_file.max_calories(3)} total calories"
