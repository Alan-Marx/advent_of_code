#!/usr/bin/env ruby
require_relative '../lib/elf_calorie_file'
require_relative '../lib/elf_calorie_hash'

elf_calorie_file = ElfCalorieFile.new(File.expand_path("../data/elf_calorie_file.txt", __dir__))
elf_calorie_hash = ElfCalorieHash.new(elf_calorie_file)

puts "The elf with the highest calories has #{elf_calorie_hash.highest_total_calories} total calories"
puts "The 3 elves with the highest calories have #{elf_calorie_hash.highest_total_calories(3)} total calories"
